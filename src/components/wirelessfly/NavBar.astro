  color: white;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 50;
}

/* reducimos altura */
.container {
  max-width: 1280px;
  margin: 0 auto;
  padding: 0.5rem 2rem; /* antes 1rem 2rem ‚Üí ahora m√°s bajo */
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  background: transparent;
}

.left-group {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.divider {
  width: 1px;
  height: 24px;
  background-color: white;
}

.logo {
  height: 40px;
  margin: 0 auto;
}

.nav-links {
  display: flex;
  align-items: center;
  gap: 3.5rem;
  list-style: none;
}

/* ENLACES NAV NORMALES */
.nav-links li a {
  color: white;
  text-decoration: none;
  font-weight: 500;
  position: relative;
  padding-bottom: 4px;
  transition: all 0.3s ease;
}

/* GRADIENTE AL HACER HOVER */
.nav-links li a:hover {
  background: linear-gradient(to right, #00bcd4, #3f51b5);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

/* ACTIVO (P√ÅGINA ACTUAL) */
.nav-links li a.active {
  background: linear-gradient(to right, #00bcd4, #3f51b5);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  font-weight: 600;
}

/* BOT√ìN DE CONTACTO */
.nav-links li button,
.nav-links li a.button {
  background: transparent;
  border: 2px solid white;
  color: white;
  padding: 0.55rem 1.25rem;
  border-radius: 999px;
  cursor: pointer;
  transition: 0.3s;
  font-weight: 500;
  display: inline-block;
  text-align: center;
  line-height: 1.2;
}

/* HOVER BOT√ìN */
.nav-links li button:hover,
.nav-links li a.button:hover {
 
  color: black !important;
}

/* PARA EVITAR HOVER CON GRADIENTE EN BOT√ìN */
.nav-links li a.button:hover {
  -webkit-background-clip: initial;
  -webkit-text-fill-color: white;
  background: none;
}

/* T√çTULO */
.site-title {
  list-style: none;
  font-size: 26px;
  margin-right: auto;
}

.bottom-border {
  height: 1px;
  background-color: #444;
  margin-top: 0.5rem;
}

/* HAMBURGER */
.hamburger {
  display: none;
  flex-direction: column;
  gap: 5px;
  cursor: pointer;
}

.hamburger span {
  width: 25px;
  height: 3px;
  background-color: white;
  transition: all 0.3s ease;
}

/* MEN√ö RESPONSIVE */
.mobile-menu {
  position: fixed;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background-color: #111;
  padding: 4rem 2rem;
  transition: left 0.4s ease;
  z-index: 9999;
  display: flex;
  flex-direction: column;
}

.mobile-menu ul {
  list-style: none;
  padding: 0;
  margin-top: 2rem;
}

.mobile-menu li {
  border-top: 1px solid white;
}

.mobile-menu li:nth-last-child(2) {
  border-bottom: 1px solid white;
}

.mobile-menu li:last-child {
  margin-top: 25px;
  border: none;
}

.mobile-menu li a {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1rem 0;
  color: white;
  font-size: 1.25rem;
  text-decoration: none;
  transition: all 0.3s ease;
}

.mobile-menu li a:hover {
  background: linear-gradient(to right, #00bcd4, #3f51b5);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.mobile-menu .arrow {
  font-size: 1.2rem;
  transition: transform 0.3s ease;
}

.mobile-menu li.open .arrow {
  transform: rotate(180deg);
}

.dropdown-content {
  display: none;
  padding: 0.5rem 0 1rem 1rem;
  font-size: 1rem;
  color: #ccc;
}

.mobile-menu li.open .dropdown-content {
  display: block;
}

.close-btn {
  font-size: 2rem;
  color: white;
  cursor: pointer;
  align-self: flex-end;
}

/* CUANDO SE ABRE EL MEN√ö */
body.menu-open .mobile-menu {
  left: 0;
}

body.menu-open::before {
  content: "";
  position: fixed;
  inset: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 9998;
}
body.menu-open {
  overflow: hidden;
  height: 100vh; /* opcional: evita que se pueda hacer scroll incluso con touch en m√≥viles */
}

/* RESPONSIVE */
@media (max-width: 1024px) {
  .hamburger {
    display: flex;
  }

  .nav-links {
    display: none;
  }

  .search-icon {
    display: none;
  }

  .logo {
    margin: 0 auto;
  }

  .container {
    justify-content: space-between;
  }

  .site-title {
    list-style: none;
    font-size: 26px;
    margin-left: auto;
  }
}
</style>

